// Общие стили

@import colors

html
  height: 100%

body
  height: 100%
  margin: 0
  padding: 0
  p
    margin: 0
    word-wrap: break-word
  a
    color: $orange
    &:hover
      color: $orange
  a,p,h1,h2,h3,h4,h5,h6,span
    font-family: 'Droidsans', 'Arial', 'sans-serif'

.btn a
  color: inherit
  text-decoration: none


.loading_pagination
  &:after
    content: url('<%= asset_path('loader.svg') %>')
    display: block
    width: 50px
    height: 50px
    margin: 15px auto


@font-face
  font-family: 'Droidsans'
  src: local('Droidsans'), url('<%= asset_path('droidsans.woff') %>')


@font-face
  font-family: 'Pancetta Pro'
  src: local('Pancetta Pro'), local('Pancetta Pro-Regular'), url('<%= asset_path('pancetta-pro.woff') %>')


@media screen and (-webkit-min-device-pixel-ratio: 0)
  @font-face
    font-family: 'Droidsans'
    src: url(<%= asset_path 'droidsans.svg' %>) format('svg')

  @font-face
    font-family: 'Pancetta Pro'
    src: url(<%= asset_path 'pancetta-pro.svg' %>) format('svg')

