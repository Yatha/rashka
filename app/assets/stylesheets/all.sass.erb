@import "colors"

html
  height: 100%

body
  height: 100%
  margin: 0
  padding: 0
  font-family: 'Droidsans'!important
  p
    margin: 0
  a
    color: $orange
    &:hover
      color: $orange


@font-face
  font-family: 'Droidsans'
  src: url(<%= asset_path 'droidsans.eot' %>)
  src: url(<%= asset_path 'droidsans.eot?#iefix' %>) format('eot')
  src: url(<%= asset_path 'droidsans.svg' %>) format('svg')
  src: url(<%= asset_path 'droidsans.woff' %>) format('woff')
  src: url(<%= asset_path 'droidsans.ttf' %>) format('truetype')
  src: local('Droidsans')


@font-face
  font-family: 'Pancetta Pro'
  src: url(<%= asset_path 'pancetta-pro.eot' %>)
  src: url(<%= asset_path 'pancetta-pro.eot?#iefix' %>) format('eot')
  src: url(<%= asset_path 'pancetta-pro.svg' %>) format('svg')
  src: url(<%= asset_path 'pancetta-pro.woff' %>) format('woff')
  src: url(<%= asset_path 'pancetta-pro.ttf' %>) format('truetype')
  src: local('Pancetta Pro')


@media screen and (-webkit-min-device-pixel-ratio: 0)
  @font-face
    font-family: 'Droidsans'
    src: url(<%= asset_path 'droidsans.svg' %>) format('svg')

  @font-face
    font-family: 'Pancetta Pro'
    src: url(<%= asset_path 'pancetta-pro.svg' %>) format('svg')
