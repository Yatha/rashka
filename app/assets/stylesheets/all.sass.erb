@import "colors"

html
  height: 100%

body
  height: 100%
  margin: 0
  padding: 0
  font-family: 'Myriad Pro'!important
  p
    margin: 0
  a
    color: $orange
    &:hover
      color: $orange


@font-face
  font-family: 'Myriad Pro'
  font-style: normal
  font-weight: 400
  src: local('Myriad Pro'), local('Myriad Pro-Regular'), url('<%= asset_path('myriad-pro-regular.woff') %>')

@font-face
  font-family: 'Pancetta Pro'
  font-style: normal
  font-weight: 400
  src: local('Pancetta Pro'), local('Pancetta Pro-Regular'), url('<%= asset_path('pancetta-pro-regular.woff') %>')

