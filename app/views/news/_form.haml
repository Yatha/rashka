= form_for(@one_news) do |f|
  - if @one_news.errors.any?
    #error_explanation
      %h2
        = p(@one_news.errors.count, "ошибка", "ошибки", "ошибок")
      %ul
        - @one_news.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :text
    = f.text_area :text
  .field
    = f.label :link
    = f.text_field :link
  .actions
    = f.submit